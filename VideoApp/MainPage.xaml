<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             mc:Ignorable="d"
             x:Class="VideoApp.MainPage"
             Title="Grabador de Videos">

    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Spacing="20" Padding="20">
        <toolkit:MediaElement x:Name="mediaElement" 
                              HorizontalOptions="FillAndExpand"
                              VerticalOptions="FillAndExpand"
                              HeightRequest="300" />

        <Button Text="Grabar Video" Clicked="TomarVideo_Clicked" HorizontalOptions="FillAndExpand" BackgroundColor="DarkRed"/>

        <Button Text="Ver Videos Guardados" Clicked="VerVideos_Clicked" HorizontalOptions="FillAndExpand" BackgroundColor="ForestGreen" />
    </StackLayout>

</ContentPage>
